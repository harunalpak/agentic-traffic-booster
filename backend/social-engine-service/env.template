# Social Engine Service - Environment Variables Template
# Copy this file to .env and fill in your actual values

# ============================================
# DATABASE CONFIGURATION
# ============================================
SPRING_DATASOURCE_URL=jdbc:postgresql://localhost:5432/atb_social
SPRING_DATASOURCE_USERNAME=atb_user
SPRING_DATASOURCE_PASSWORD=secure_password

# ============================================
# KAFKA CONFIGURATION
# ============================================
SPRING_KAFKA_BOOTSTRAP_SERVERS=localhost:9092

# ============================================
# EXTERNAL SERVICES
# ============================================
CAMPAIGN_SERVICE_URL=http://localhost:8082
PRODUCT_SERVICE_URL=http://localhost:8080

# ============================================
# OPENAI API (REQUIRED)
# ============================================
# Get your API key from: https://platform.openai.com/api-keys
OPENAI_API_KEY=sk-your-actual-api-key-here
OPENAI_MODEL=gpt-4o-mini

# ============================================
# BITLY API (OPTIONAL)
# ============================================
# Get your token from: https://bitly.com/a/settings/api
# Leave empty to use fallback short link generation
BITLY_TOKEN=

# ============================================
# SERVER CONFIGURATION
# ============================================
SERVER_PORT=8083

# ============================================
# TWEET SCOUT CONFIGURATION
# ============================================
# Interval in milliseconds
# 300000 = 5 minutes (dev)
# 1800000 = 30 minutes (prod)
TWEET_SCOUT_INTERVAL=1800000

# ============================================
# SPRING PROFILES
# ============================================
# Options: dev, prod
SPRING_PROFILES_ACTIVE=dev

