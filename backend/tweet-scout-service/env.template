# Tweet Scout Service - Environment Variables Template

# ============================================
# KAFKA CONFIGURATION
# ============================================
KAFKA_BROKERS=localhost:9092

# Suppress Kafka partitioner warning
KAFKAJS_NO_PARTITIONER_WARNING=1

# ============================================
# EXTERNAL SERVICES
# ============================================
CAMPAIGN_SERVICE_URL=http://localhost:8082

# ============================================
# TWITTER AUTHENTICATION
# ============================================
# Required for real Twitter scraping
TWITTER_USERNAME=your_twitter_username
TWITTER_PASSWORD=your_twitter_password
TWITTER_EMAIL=your_twitter_email@example.com

# ============================================
# SCRAPING CONFIGURATION
# ============================================
# How often to run the scout job (in minutes)
SCRAPE_INTERVAL_MINUTES=30

# Run scout job immediately on startup
RUN_ON_STARTUP=false

# ============================================
# LOGGING
# ============================================
# Options: trace, debug, info, warn, error, fatal
LOG_LEVEL=info

# ============================================
# NODE ENVIRONMENT
# ============================================
# Options: development, production
NODE_ENV=development

